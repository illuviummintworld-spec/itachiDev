# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/osint_db
REDIS_URL=redis://localhost:6379/0

# API Keys - Get from respective services
HUNTER_API_KEY=your_hunter_io_api_key_here
CLEARBIT_API_KEY=your_clearbit_api_key_here
HIBP_API_KEY=your_hibp_api_key_here
DEHASHED_API_KEY=your_dehashed_api_key_here
SNUSBASE_API_KEY=your_snusbase_api_key_here
INTELX_API_KEY=your_intelx_api_key_here
TWOCAPTCHA_API_KEY=your_2captcha_api_key_here

# Proxy Configuration
BRIGHTDATA_USERNAME=your_brightdata_username
BRIGHTDATA_PASSWORD=your_brightdata_password
PROXY_ENABLED=false

# Security
JWT_SECRET_KEY=change_this_to_random_secret_key_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Monitoring
SENTRY_DSN=your_sentry_dsn_optional
ENABLE_METRICS=true

# OpenAI (for ML features)
OPENAI_API_KEY=your_openai_api_key_optional

# Application Settings
DEBUG=true
LOG_LEVEL=INFO
API_V1_PREFIX=/api/v1

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_ENABLED=true